<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_podatak_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Podatak_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_podatak_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Podatak_2"
        app:layout_constraintStart_toStartOf="@+id/tv_podatak_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_podatak_1" />

    <TextView
        android:id="@+id/tv_field_data_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Terenski podatak: "
        app:layout_constraintStart_toStartOf="@+id/tv_podatak_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_podatak_2" />

    <EditText
        android:id="@+id/et_field_data_value"
        android:layout_width="181dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/tv_field_data_label"
        app:layout_constraintTop_toTopOf="@+id/tv_field_data_label"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>